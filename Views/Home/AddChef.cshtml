@using chefs_dishes.Models
@model Chef

<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <style>
        h1 {
            text-align: center;
            margin: 20px;
        }
        body {
            background-color: #fff9fc;
        }
    
    </style>
    </head>

<body>
<h1>Add a Chef!</h1>
<a href="/">Home</a>
<div class="container">
    <form asp-action="createChef" asp-controller="Home" method="POST">
    <div class="row">
        <div class="col">
            <label for="inputCity">First Name</label>
            <span asp-validation-for="FirstName"></span>
            <input type="text" class="form-control" placeholder="First name" asp-for="FirstName">
        </div>
        <div class="col">
            <label for="inputCity">Date of Birth</label>
            <span asp-validation-for="Date_of_Birth"></span>
            <input type="date" class="form-control" placeholder="Last name" asp-for="Date_of_Birth">
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <label for="inputCity">Last Name</label>
            <span asp-validation-for="LastName"></span>
            <input type="text" class="form-control" placeholder="Last name" asp-for="LastName">
            <button type="submit" class="btn btn-primary mb-2">Submit</button>
        </div>
    </div>
    </form>
</div>
</body>
</html>